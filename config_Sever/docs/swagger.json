{
    "swagger": "2.0",
    "info": {
        "description": "Saas仿真平台RESTful.",
        "title": "Simulation platform  API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "http://www.swagger.io/support",
            "email": "support@swagger.io"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "paths": {
        "/SimulationConfig/{filename}": {
            "get": {
                "description": "根据文件名从 files 目录中下载指定仿真配置文件",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/octet-stream"
                ],
                "tags": [
                    "SimulationConfig"
                ],
                "summary": "下载仿真配置文件",
                "parameters": [
                    {
                        "type": "string",
                        "description": "文件名",
                        "name": "filename",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "file"
                        }
                    },
                    "500": {
                        "description": "内部错误",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/getGeojson": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "获取路网文件的Geojson数据",
                "produces": [
                    "application/octet-stream"
                ],
                "tags": [
                    "Geojson"
                ],
                "summary": "获取路网文件的Geojson数据",
                "parameters": [
                    {
                        "type": "string",
                        "default": "http://localhost:8081/SimulationConfig/j_lI-",
                        "description": "仿真器索引",
                        "name": "netfile",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "geojson转换成功",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "请求错误",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "服务器内部错误",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/uploadmap": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "生成项目配置文件",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "text/plain"
                ],
                "tags": [
                    "文件上传"
                ],
                "summary": "生成项目配置文件",
                "parameters": [
                    {
                        "type": "file",
                        "description": "路网文件",
                        "name": "netFile",
                        "in": "formData"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "路网文件保存成功",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "请求错误",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "服务器内部错误",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}